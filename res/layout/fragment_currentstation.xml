<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >    
    <include 
        layout="@layout/view_title"/>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1">
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="#ededed">
	        
	    </LinearLayout>
	    <LinearLayout 
	        android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <RelativeLayout 		        
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    <RelativeLayout 		        
				    android:layout_width="match_parent"
				    android:layout_height="30dip"
			        android:alpha="0.2"
			        android:background="#ffff8800">
			        
			    </RelativeLayout>
		        <TextView 
			        android:id="@+id/tab_mainbody_location"
			        android:drawableLeft="@drawable/icon_mylocation"
				    android:layout_width="match_parent"
				    android:layout_height="30dip"
			        android:padding="5dip"
			        android:textSize="14sp"
			        android:singleLine="true"
			        android:textColor="@android:color/secondary_text_light"
			        android:text="正在定位中。。。"
			        android:layout_marginLeft="5dip"
			        android:layout_marginRight="5dip"/>
		    </RelativeLayout>
		    <RelativeLayout 
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent">
		        <org.mariotaku.refreshnow.widget.RefreshNowListView 	    
				    android:scrollbars="none"
				    android:id="@+id/tab_mainbody_list"
				    android:divider="#55ffffff"
			        android:dividerHeight="0.5dp"
			        android:fadingEdge="none"
			        android:fastScrollEnabled="false"
			        android:cacheColorHint="#00000000"
			    	android:layout_width="match_parent"
			    	android:layout_height="match_parent">
				    
				</org.mariotaku.refreshnow.widget.RefreshNowListView>
				<org.mariotaku.refreshnow.widget.RefreshNowProgressIndicator
					android:id="@+id/tab_mainbody_progress"
					android:layout_width="match_parent"
					android:layout_height="3dp"
					app:spb_color="@integer/google_green"
					app:spb_colors="@array/gplus_colors"
					app:spb_interpolator="spb_interpolator_acceleratedecelerate"
					app:spb_mirror_mode="true"
					app:spb_reversed="true"
					app:spb_sections_count="2"
					app:spb_speed="2.5"
					app:spb_stroke_separator_length="0dp"
					app:spb_stroke_width="3dp"/>
		    </RelativeLayout>	        
	    </LinearLayout>	    
    </RelativeLayout>
</LinearLayout>