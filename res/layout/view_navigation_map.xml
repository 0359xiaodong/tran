<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white" >
    <LinearLayout 
	    android:orientation="horizontal"
        android:gravity="center_vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
	        android:id="@+id/navigation_map_title"
	        android:textSize="18sp"
	        android:layout_marginLeft="10dip"
	        android:layout_weight="1"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/navigation_map_more"
            android:gravity="center"
            android:textColor="#007ce2"
            android:text="详情"
            android:textSize="15sp"
            android:padding="10dip"
            android:drawableLeft="@drawable/icon_poidetail_info"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView 
        android:id="@+id/navigation_map_bus_line_scroll"
    	android:layout_weight="1"
        android:scrollbars="none"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout 
	        android:id="@+id/navigation_map_bus_line_layout"
	    	android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:orientation="vertical">
	        
	    </LinearLayout>
    </ScrollView>
    <LinearLayout 
	    android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="5dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">	    
	    <TextView 
	        android:id="@+id/navigation_map_time"
	        android:textColor="@android:color/darker_gray"
	        android:textSize="14sp"
	    	android:layout_width="60dip"
	    	android:layout_height="20dip"/> 	     
	    <TextView 
	        android:background="@android:color/darker_gray"
	    	android:layout_width="1dip"
	    	android:layout_height="20dip"/> 	
	    <TextView 
	        android:id="@+id/navigation_map_distance"
	        android:gravity="center_horizontal"
	        android:textColor="@android:color/darker_gray"
	        android:textSize="14sp"
	    	android:layout_width="70dip"
	    	android:layout_height="20dip"/>      
	    <TextView 
	        android:background="@android:color/darker_gray"
	    	android:layout_width="1dip"
	    	android:layout_height="20dip"/> 
	    <TextView 
	        android:id="@+id/navigation_map_walkdistance"
	        android:textColor="@android:color/darker_gray"
	        android:paddingLeft="10dip"
	        android:textSize="14sp"
	    	android:layout_width="fill_parent"
	    	android:layout_height="20dip"/>
	</LinearLayout>
</LinearLayout>
