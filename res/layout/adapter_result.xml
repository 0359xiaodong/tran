<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView 
        android:text="始"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:visibility="gone"
        android:id="@+id/icon_start"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/icon_start"
    	android:layout_width="35dip"
    	android:layout_height="35dip"
    	android:layout_marginLeft="22.5dip"/>
    <RelativeLayout 
        android:id="@+id/result_extra_layout"
	    android:layout_width="match_parent"
	    android:layout_height="50dip">     
	    <ImageView 
	        android:background="@android:color/black"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="40dip"
	    	android:layout_width="45dip"
	    	android:layout_height="1dip"/>	    
	    <RelativeLayout             
		    android:layout_width="60dip"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="10dip">
            <ImageView 
	            android:background="@android:color/black"
	            android:layout_centerHorizontal="true"
		    	android:layout_width="1dip"
		    	android:layout_height="50dip"/>
            <ImageView 
	            android:src="@drawable/icon_bus"
	            android:layout_centerInParent="true"
		    	android:layout_width="35dip"
		    	android:layout_height="35dip"/>  
        </RelativeLayout>  
	    <TextView 
	        android:id="@+id/result_extra"
	        android:background="@drawable/input_green"
	        android:textSize="15sp"
	        android:textColor="#ff0099cc"
	        android:layout_marginLeft="65dip"
	        android:padding="8dip"
	        android:layout_centerVertical="true"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip">	    	
	    <ImageView 
	        android:background="@android:color/black"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="40dip"
	    	android:layout_width="45dip"
	    	android:layout_height="1dip"/>  	    	
        <RelativeLayout             
		    android:layout_width="60dip"
		    android:layout_height="wrap_content"
            android:layout_marginLeft="10dip">
            <ImageView 
	            android:background="@android:color/black"
	            android:layout_centerInParent="true"
		    	android:layout_width="1dip"
		    	android:layout_height="50dip"/> 	
		    <ImageView 
		        android:id="@+id/result_me"
	            android:src="@drawable/icon_me"
	            android:visibility="invisible"
	            android:layout_centerInParent="true"
		    	android:layout_width="35dip"
		    	android:layout_height="35dip"/>
        </RelativeLayout>             
	    <TextView 
	        android:id="@+id/result_name"
	        android:background="@drawable/input_gray"
	        android:textSize="18sp"
	        android:layout_marginLeft="65dip"
	        android:padding="8dip"
	        android:singleLine="true"
	        android:layout_centerVertical="true"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView 
        android:text="终"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:visibility="gone"
        android:id="@+id/icon_stop"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/icon_stop"
    	android:layout_width="35dip"
    	android:layout_height="35dip"
    	android:layout_marginLeft="22.5dip"/>
</LinearLayout>
