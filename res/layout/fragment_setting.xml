<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/view_title"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1">
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="@android:color/white">
	        
	    </LinearLayout>
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_marginLeft="6dip"
	        android:layout_marginRight="6dip"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginTop="6dip"
	        	android:background="@drawable/list_blockbg_normal">
		        <LinearLayout 
			        android:id="@+id/setting_offline"
		            android:orientation="horizontal"
			        android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:gravity="center">
		        	<LinearLayout 		        	    
			            android:orientation="horizontal"
				        android:layout_width="fill_parent"
				        android:gravity="center_vertical"
			            android:layout_weight="1"
			        	android:layout_height="42.0dip">
		        	    <TextView 
				            android:text="离线地图"
				            android:textSize="16sp"
				            android:gravity="left"
				            android:layout_marginLeft="12.0dip"
				            android:textColor="@android:color/black"
				            android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"/>
		        	    <TextView 
		        	        android:id="@+id/download_state"
				            android:text="未下载"
				            android:textSize="14sp"
				            android:layout_marginLeft="12.0dip"
				            android:textColor="@android:color/darker_gray"
				            android:layout_width="fill_parent"
			        		android:layout_height="wrap_content"/>
		        	</LinearLayout>
			        <LinearLayout 
			            android:layout_weight="1"
			            android:gravity="right|center_vertical"
				        android:layout_width="fill_parent"
			       		android:layout_height="wrap_content">
			            <ImageView 
				            android:src="@drawable/ic_mything_next_normal"
				            android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:visibility="invisible"
			        		android:layout_marginRight="8.0dip"/>
			        </LinearLayout>
			        	        
			    </LinearLayout>
			    <LinearLayout 
			        android:id="@+id/setting_update"
			        android:orientation="vertical"
			        android:layout_width="fill_parent"
			       	android:layout_height="wrap_content"
			       	android:gravity="center">
			        <View 
			            android:background="@drawable/list_blockbg_divider" 
			            android:layout_width="fill_parent" 
			            android:layout_height="1.0dip" />
				    <LinearLayout 
			            android:orientation="horizontal"
				        android:layout_width="fill_parent"
			        	android:layout_height="42.0dip"
			        	android:gravity="center">
			        	<LinearLayout 		        	    
				            android:orientation="horizontal"
					        android:layout_width="fill_parent"
					        android:gravity="center_vertical"
				            android:layout_weight="1"
				        	android:layout_height="42.0dip">
			        	    <TextView 
					            android:text="版本更新"
					            android:textSize="16sp"
					            android:gravity="left"
					            android:layout_marginLeft="12.0dip"
					            android:textColor="@android:color/black"
					            android:layout_width="wrap_content"
				        		android:layout_height="wrap_content"/>		        	    
			        	</LinearLayout>
				        <LinearLayout 
				            android:layout_weight="1"
				            android:gravity="right|center_vertical"
					        android:layout_width="fill_parent"
				       		android:layout_height="wrap_content">
				            <ImageView 
					            android:src="@drawable/ic_mything_next_normal"
					            android:layout_width="wrap_content"
				        		android:layout_height="wrap_content"
			        			android:visibility="invisible"
				        		android:layout_marginRight="8.0dip"/>
				        </LinearLayout>
				        	        
				    </LinearLayout>
				</LinearLayout>    
			    <LinearLayout 
			        android:id="@+id/setting_about"
			        android:orientation="vertical"
			        android:layout_width="fill_parent"
			       	android:layout_height="wrap_content"
			       	android:gravity="center">		
			        <View 
			            android:background="@drawable/list_blockbg_divider" 
			            android:layout_width="fill_parent" 
			            android:layout_height="1.0dip" />	            
			        <LinearLayout 
				        android:orientation="horizontal"
				        android:layout_width="fill_parent"
				        android:layout_height="42.0dip"
				       	android:gravity="center">
			            <TextView             
				        	android:text="关于 "
				        	android:textSize="16sp"
				            android:gravity="left"
				            android:layout_marginLeft="12.0dip"
				            android:layout_weight="1"
				            android:textColor="@android:color/black"
				            android:layout_width="fill_parent"
				       		android:layout_height="wrap_content"/>
				        <LinearLayout 
				            android:layout_weight="1"
				            android:gravity="right|center_vertical"
					        android:layout_width="fill_parent"
				       		android:layout_height="wrap_content">
				            <ImageView 
					            android:src="@drawable/ic_mything_next_normal"
					            android:layout_width="wrap_content"
				        		android:layout_height="wrap_content"
				        		android:layout_marginRight="8.0dip"/>
				        </LinearLayout>
			        </LinearLayout>			        	        
			    </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginTop="12dip"
	        	android:background="@drawable/list_blockbg_normal">
		        <LinearLayout 
		            android:id="@+id/setting_bike"
			        android:orientation="horizontal"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:padding="10dip"
			       	android:gravity="center">
			        <ImageView 
			            android:src="@drawable/adv_bike"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"/>
			        <LinearLayout 
			            android:orientation="vertical"
			        	android:layout_width="match_parent"
			        	android:layout_height="wrap_content">
			            <TextView             
				        	android:text="南京公共自行车"
				        	android:textSize="16sp"
				            android:gravity="left"
				            android:layout_marginLeft="12.0dip"
				            android:textColor="@android:color/black"
				            android:layout_width="fill_parent"
				       		android:layout_height="wrap_content"/>
			            <TextView             
				        	android:text="绿色出行好帮手，支持实时查询南京本地公共自行车车站位置以及可借车辆数量"
				        	android:textSize="13sp"
				            android:gravity="left"
				            android:layout_marginLeft="12.0dip"
				            android:layout_marginTop="3dip"
				            android:textColor="@android:color/darker_gray"
				            android:layout_width="fill_parent"
				       		android:layout_height="wrap_content"/>
			        </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
	    </LinearLayout>	    
    </RelativeLayout>
</LinearLayout>
